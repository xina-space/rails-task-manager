
<h3> <%= @task.title %> </h3>
<div class="display-task">
  <p> <%= @task.details %> </p>
</div>

<% if @task.completed == true %>
    <div class="task-status"><i class="far fa-check-square"></i> <p class="">Completed</p></div>
    <% else  %>
    <div class="task-status"><i class="fas fa-times"></i> <p class="">Not completed</p> </div>
    <% end %>

<div class="buttons">

<p>
  <%= link_to 'edit', edit_task_path(@task),type: 'button', class: 'btn btn-warning' %>
</p>

<p>
  <%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure you want to remove this task?' }, type: 'button', class: 'btn btn-danger' %>
</p>

<p>
  <%= link_to 'back to tasks', tasks_path, type: 'button', class: 'btn btn-secondary'%>
</p>

</div>
